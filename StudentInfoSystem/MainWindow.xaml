<Window x:Class="StudentInfoSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="gbUser" Header="GroupBox" HorizontalAlignment="Left" Height="186" Margin="45,59,0,0" VerticalAlignment="Top" Width="543">
            <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="37" Margin="75,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        </GroupBox>
        <Label x:Name="lblName" Content="Потребител" HorizontalAlignment="Left" Margin="68,125,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="btnHello" Content="Здрасти" HorizontalAlignment="Left" Margin="322,204,0,0" VerticalAlignment="Top" Width="87" FontSize="20" IsCancel="True" Click="BtnHello_Click"/>
        <Label Content="Име:" HorizontalAlignment="Left" Margin="68,162,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
